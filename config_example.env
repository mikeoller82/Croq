# Croq Enhanced Configuration Example
# Copy this file to .env and fill in your actual values

# =============================================================================
# API KEYS - Core LLM Providers
# =============================================================================

# OpenRouter (NEW!) - Access to multiple models through one API
OPENROUTER_API_KEY=your_openrouter_key_here

# Anthropic Claude Models
ANTHROPIC_API_KEY=your_anthropic_key_here

# OpenAI GPT Models
OPENAI_API_KEY=your_openai_key_here

# Groq (Fast Inference)
GROQ_API_KEY=your_groq_key_here

# Google Gemini
GEMINI_API_KEY=your_gemini_key_here

# =============================================================================
# ENHANCED FEATURES CONFIGURATION
# =============================================================================

# Hook System Configuration
CROQ_ENABLE_HOOKS=true
CROQ_HOOK_TIMEOUT=30
CROQ_HOOK_STATS_ENABLED=true

# MCP Server Configuration
MCP_FILESYSTEM_ROOT=.
MCP_ENABLE_GIT=true
MCP_SEARCH_ENABLED=true
MCP_SERVER_TIMEOUT=10
MCP_AUTO_RESTART=true

# Codebase Search Configuration
CROQ_INDEX_DATABASE=.croq_index.db
CROQ_SEARCH_MAX_RESULTS=20
CROQ_SEARCH_CONTEXT_LINES=10
CROQ_SEARCH_MAX_FILE_SIZE=1048576
CROQ_SEARCH_EXCLUDE_PATTERNS=*.pyc,*.so,*.dll,node_modules,__pycache__,.git

# Plugin System Configuration
CROQ_PLUGINS_DIR=plugins
CROQ_PLUGIN_TIMEOUT=30
CROQ_ENABLE_PLUGIN_RELOAD=true

# =============================================================================
# PERFORMANCE & OPTIMIZATION
# =============================================================================

# General Performance
CROQ_CACHE_ENABLED=true
CROQ_CACHE_TTL=3600
CROQ_MAX_CONCURRENT_REQUESTS=5

# Search Performance
CROQ_SEARCH_CHUNK_SIZE=1000
CROQ_SEARCH_PARALLEL_INDEXING=true
CROQ_SEARCH_INCREMENTAL_UPDATE=true

# Hook Performance
CROQ_HOOK_ASYNC_TIMEOUT=10
CROQ_HOOK_MAX_CONCURRENT=10

# MCP Performance  
MCP_CONNECTION_POOL_SIZE=5
MCP_REQUEST_TIMEOUT=15

# =============================================================================
# LOGGING & DEBUGGING
# =============================================================================

# Log Levels: DEBUG, INFO, WARNING, ERROR
CROQ_LOG_LEVEL=INFO
CROQ_LOG_FILE=croq.log
CROQ_ENABLE_PERFORMANCE_LOGS=false

# Component-specific logging
CROQ_HOOK_LOG_LEVEL=INFO
CROQ_MCP_LOG_LEVEL=INFO
CROQ_SEARCH_LOG_LEVEL=INFO
CROQ_PLUGIN_LOG_LEVEL=INFO

# =============================================================================
# SECURITY & PRIVACY
# =============================================================================

# Enable/disable features for security
CROQ_ALLOW_EXTERNAL_TOOLS=true
CROQ_SANDBOX_MODE=false
CROQ_VALIDATE_SSL=true

# Privacy settings
CROQ_ANONYMIZE_LOGS=false
CROQ_STORE_CONVERSATIONS=true
CROQ_CONVERSATION_RETENTION_DAYS=30

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Model preferences
CROQ_DEFAULT_MODEL=claude-3-haiku-20240307
CROQ_FALLBACK_MODEL=gpt-3.5-turbo
CROQ_ENABLE_MODEL_SWITCHING=true

# Context management
CROQ_MAX_CONTEXT_LENGTH=32000
CROQ_CONTEXT_WINDOW_BUFFER=1000
CROQ_AUTO_CONTEXT_ENHANCEMENT=true

# Interactive mode
CROQ_INTERACTIVE_HISTORY_SIZE=1000
CROQ_INTERACTIVE_AUTO_SAVE=true
CROQ_INTERACTIVE_STARTUP_CHECKS=true

# =============================================================================
# EXPERIMENTAL FEATURES
# =============================================================================

# These features are experimental and may change
CROQ_ENABLE_VECTOR_SEARCH=false
CROQ_ENABLE_CODE_RELATIONSHIPS=false
CROQ_ENABLE_MULTI_REPO=false
CROQ_ENABLE_WEB_UI=false

# Vector search (if enabled)
CROQ_VECTOR_MODEL=text-embedding-ada-002
CROQ_VECTOR_DIMENSIONS=1536
CROQ_VECTOR_SIMILARITY_THRESHOLD=0.8

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Development mode settings
CROQ_DEV_MODE=false
CROQ_ENABLE_DEBUG_COMMANDS=false
CROQ_MOCK_EXTERNAL_APIS=false

# Testing
CROQ_TEST_MODE=false
CROQ_TEST_DATA_DIR=test_data
CROQ_PRESERVE_TEST_DATA=false
